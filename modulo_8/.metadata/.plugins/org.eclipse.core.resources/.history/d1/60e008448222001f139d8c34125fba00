package exercicios_praticos;

import java.util.*;


public class Exercicio_um {
	public void main(String[] args) {
		Scanner ler = new Scanner(System.in);
		
		float salario, abono;
		
		System.out.println("Informe o valor do salário:\n");
		salario = ler.nextFloat();
		
		System.out.println("Informe o valor do abono:\n");
		abono = ler.nextFloat();
		
		
		System.out.println("Novo Salário = " + (salario + abono));
		ler.close();
	}

}
